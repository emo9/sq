<div class="page-header">
  <h2>Change your password</h2>
</div>
<div class="row">
  <div class="span9">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => 'form-horizontal', :method => :put}) do |f| %>
      <% if resource.errors.any? -%>
        <div class="alert alert-block alert-error">
          <h3><%= pluralize(resource.errors.count, "error") %>prohibited:</h3>
          <ul>
            <% resource.errors.full_messages.each do |msg| -%>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <fieldset>
        <div class="control-group">
          <%= f.label :password, "New password", :class => 'control-label' %>
          <div class="controls">
            <%= f.password_field :password %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :password_confirmationi, "Confirm new password", :class => 'control-label' %>
          <div class="controls">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>
        <%= f.hidden_field :reset_password_token %>
        <div class="form-actions">
          <%= f.submit "Change my password", :class => 'btn btn-primary', :name => 'commit' %>
        </div>
      </fieldset>
    <% end %>
  </div>
  <div class="span3">
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>
