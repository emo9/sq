<div class="row">
  <div class="span9">
    <h1><%= @quote.body %></h1>
    <div align="right">
      <p>
        <h4><i><%= @quote.reference %></i></h4>
      </p>
    </div>
    <h5>Remark</h5>
    <p><%= @quote.remark %></p>
    <% if user_signed_in? && @quote.user_id == current_user.id -%>
      <%= link_to 'Edit', edit_quote_path(@quote), class: 'btn btn-small btn-primary' %>
      <%= link_to 'Destroy', @quote, confirm: 'Are you sure?', method: :delete, class: 'btn btn-small btn-primary' %>
    <% end %>
  </div>
  <div class="span3">
    <%= render 'sidebar' %>
  </div>
</div>

